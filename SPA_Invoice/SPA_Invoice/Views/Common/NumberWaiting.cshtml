<div class="modal hide fade modal-number-waiting" tabindex="-1" role="dialog" ng-controller="ModalNumberWaitingController">
    <div class="modal-dialog modal-dialog-scrollable modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" ng-if="TYPECHANGE == 1">Tạo mới dải hóa đơn chờ</h3>
                <h3 class="modal-title" ng-if="TYPECHANGE == 2">Cập nhật dải hóa đơn chờ</h3>
                <button type="button" class="close " data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <form class="modal-body">
                <div class="row">
                    <div class="col-6">
                        <p class="mb-1 mt-3">Mẫu số: </p>
                        <select class="form-control form-control-sm" ng-model="Number.FORMCODE" ng-disabled="TYPECHANGE == 2" ng-change="GetNumber()">
                            <option value="" disabled selected>--Chọn mẫu số--</option>
                            <option ng-repeat="item in ListFormCode" value="{{item.FORMCODE + '-' + item.SYMBOLCODE}}">{{item.FORMCODE}} - {{item.SYMBOLCODE}}</option>
                        </select>
                    </div> <div class="col-6">
                        <p class="mb-1 mt-3">Ký hiệu: </p>
                        <input class="form-control form-control-sm" type="text" value="{{Number.FORMCODE.split('-')[1]}}" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-4">
                        <p class="mb-1 mt-3">Số hiện tại: </p>
                        <input class="form-control form-control-sm" type="number" disabled ng-model="Number.CURRENTNUMBER" />
                    </div>

                    <div class="col-4">
                        <p class="mb-1 mt-3">Từ số: </p>
                        <input class="form-control form-control-sm" type="number" ng-model="Number.FROMNUMBER" />
                    </div>

                    <div class="col-4">
                        <p class="mb-1 mt-3">Đến số: </p>
                        <input class="form-control form-control-sm" type="number" ng-model="Number.TONUMBER" />
                    </div>
                </div>
                <div class="mt-3">
                    <textarea rows="2" class="form-control ember-text-area w-100" ng-model="Number.NOTE" placeholder="Ghi chú dải chờ..." autofocus></textarea>
                </div>
            </form>
            <div class="modal-footer d-flex justify-content-between" style="padding-right:16px;">
                <div class="d-flex justify-content-start">
                    <button class="btn btn-secondary btn-sm mr-3" data-dismiss="modal" style="height:37px;">Hủy</button>
                </div>
                <div class="d-flex justify-content-between">
                    <button class="btn btn-success" ng-click="AddNumberWaiting()" ng-show="TYPECHANGE == 1"> <span class="fa fa-save"></span> &nbsp; Tạo mới dải chờ</button>
                    <button class="btn btn-success ng-hide" ng-click="UpdateNumberWaiting()" ng-show="TYPECHANGE == 2"> <span class="fa fa-save"></span> &nbsp; Chỉnh sửa dải chờ</button>
                </div>
            </div>
        </div>
    </div>
</div>
