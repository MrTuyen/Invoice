        width: 1100px !important;
        height: 850px !important;
        position: relative;
    }
    .ui-dialog .ui-dialog-titlebar {
        display: flex !important;
        display: -ms-flexbox !important;
        -ms-flex-pack: justify !important;
        justify-content: space-between !important;
