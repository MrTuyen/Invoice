<div class="tool-setting-area" ng-controller="SettingsController">
    <div class="bg-white border">
        <div class="btn-filter mt-3 account-setting-content">
            <a href="javascript:;" class="btn-switch active" ng-model="Tab.Parameter" ng-click="TabClick(1)" ng-class="{true: 'active'}[Tab.Parameter]">Tham số làm tròn</a>
            <a href="javascript:;" class="btn-switch" ng-model="Tab.Email" ng-click="TabClick(2)" ng-class="{true: 'active'}[Tab.Email]">Cấu hình email</a>
            <a href="javascript:;" class="btn-switch" ng-model="Tab.Zalo" ng-click="TabClick(3)" ng-class="{true: 'active'}[Tab.Zalo]">Cấu hình zalo</a>
            <hr />

            @*Tham số làm tròn*@
            <div ng-show="Tab.Parameter">
                <div class="card card-body border-0">
                    <h4><strong>Tham số làm tròn</strong></h4>
                    <h6>Hiển thị số lượng số phần thập phân</h6>
                    <div>
                        <div class="row bg-white">
                            <div class="col-md-12 mb-3">
                                <div>
                                    <div><b>1. Số lượng tỷ giá</b></div>
                                    <div class="d-flex">
                                        <div class="col-3">
                                            <p class="">Làm tròn số lượng: </p>
                                        </div>
                                        <div class="col-5">
                                            <input class="form-control form-control-sm" ng-model="Enterprise.QUANTITYPLACE" type="number" max="8" min="0">
                                        </div>
                                        <div class="col-4">
                                            Ví dụ:{{(ExValue).formatMoney(Enterprise.QUANTITYPLACE, ",", ".")}}
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <div><b>2. Làm tròn chi tiết trên đơn hàng</b></div>
                                    <div class="d-flex">
                                        <div class="col-3">
                                            <p class="">Làm tròn đơn giá: </p>
                                        </div>
                                        <div class="col-5">
                                            <input class="form-control form-control-sm" ng-model="Enterprise.PRICEPLACE" type="number" max="8" min="0">
                                        </div>
                                        <div class="col-4">
                                            Ví dụ:{{(ExValue).formatMoney(Enterprise.PRICEPLACE, ",", ".")}}
                                        </div>
                                    </div>
                                    <div class="d-flex mt-3">
                                        <div class="col-3">
                                            <p class="">Làm tròn thành tiền: </p>
                                        </div>
                                        <div class="col-5">
                                            <input class="form-control form-control-sm" ng-model="Enterprise.MONEYPLACE" type="number" max="8" min="0">
                                        </div>
                                        <div class="col-4">
                                            Ví dụ:{{(ExValue).formatMoney(Enterprise.MONEYPLACE, ",", ".")}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 ">
                                <button class="btn btn-success btn-sm" ng-click="SaveParameter(2)">Lưu thay đổi</button>
                                <button class="btn btn-success btn-sm" ng-click="SaveParameter(1)">Khôi phục mặc định</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @*Cấu hình email*@
            <div ng-show="Tab.Email">
                @Html.Partial("~/Views/Settings/EmailConfiguration.cshtml")
            </div>

            @*Cấu hình zalo*@
            <div ng-show="Tab.Zalo">
                @Html.Partial("~/Views/Settings/ZaloConfiguration.cshtml")
            </div>

        </div>
    </div>
</div>




