@{
    Layout = "~/Views/Shared/_LayoutSimple.cshtml";
    ViewBag.Title = "Register - NOVAON EINVOICE";
}
<style>
    .error {
        display: none;
        color: red;
        font-size: 14px;
    }
</style>
<div id="popop-login" class="frm_register">
    <p class="logo text-center"><img src="~/Images/logo_full.jpg" /></p>
    <div class="message-login-form text-center">
        Đăng ký dùng thử miễn phí<br> Novaon Invoice
    </div>
    <button id="googleLogin" class="login-with-google mt-3" type="button">
        <span class="icon-g"></span>Đăng ký với Google
    </button>
    <p class="text-center text-line-center">
        <span>Hoặc</span>
    </p>

    <form class="validate-form">
        <div>
            <span class="error">*<span id="errorMessgage"></span></span>
        </div>
        <div class="wrap-input100 validate-input">
            <input type="tel" name="phonenumber" id="phonenumber" class="form-control input100 input-text" />
            <span class="focus-input100">Số điện thoại <span>*</span></span>
        </div>

        <div class="wrap-input100 validate-input" data-validate="Valid email is: a@b.c">
            <input type="email" id="email" class="form-control input100 input-text" />
            <span class="focus-input100">Email <span>*</span></span>
        </div>

        <div class="wrap-input100 validate-input" data-validate="Enter password">
            <span class="btn-show-pass">
                <i class="zmdi zmdi-eye"></i>
            </span>
            <input class="form-control input100 input-text" type="password" id="password" name="password" />
            <span class="focus-input100">Mật khẩu (Ít nhất 8 ký tự) <span>*</span></span>
        </div>

        <button class="btn btn-success btn-block mt-3 btn-register" type="button" onclick="RegisterRequest()">
            <img src="~/Images/oval-white-loading.svg" /> Đăng ký
        </button>

        <label for="cbx" class="label-cbx">
            <input id="cbx" type="checkbox" class="invisible" checked="checked">
            <span class="checkbox">
                <svg width="20px" height="20px" viewBox="0 0 20 20">
                    <path d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"></path>
                    <polyline points="4 11 8 15 16 6"></polyline>
                </svg>
            </span>
            <span class="cbx-text">Đồng ý với <a href="#">Điều khoản dịch vụ</a> và <a href="#">Chính sách bảo mật</a> của Novaon Invoice</span>
        </label>
    </form>


    <p class="link-active text-center">
        Bạn đã có tài khoản? <a href="/user-account/login" class="text-primary">Đăng nhập</a>
    </p>
    <p class="clear"></p>
</div>