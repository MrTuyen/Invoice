@using SAB.Common
@{
    ViewBag.Title = "Danh sách nhóm quyền";
}


<div class="boxsearch">
    @using (Html.BeginForm("Index", "PermissionGroup", FormMethod.Post, new { @id = "frmSearch" }))
    {
        @Html.TextBox("strKeyword", null, new { @style = "width: 250px;", @class = "seachInput", @placeholder = "Tìm theo mã hoặc tên", @id = "txtSearch" })
        <input id="btnSearch" type="submit" value="Tìm" class="btn btn-success" />
        <a class="btn_byuser" href="~/PermissionGroup/Detail/0">Thêm mới</a>
        @Html.Hidden("intPage", 1, new { @id = "hdPageIndex" })
    }
</div>

<div class="bodycontent">
    <table class="table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th class="text-center" style="width: 90px">Mã nhóm</th>
                <th>Tên nhóm</th>
                <th>Mô tả</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (SYSTEM_PERMISSIONGROUP p in Model)
                {
                    <tr class="gradeX">
                        <td class="text-center">@Html.ActionLink(p.PERMISSIONGROUPID.ToString(), "Detail", "PermissionGroup", new { id = p.PERMISSIONGROUPID.ToString() }, null)</td>
                        <td>@Html.ActionLink(p.PERMISSIONGROUPNAME, "Detail", "PermissionGroup", new { id = p.PERMISSIONGROUPID }, null)</td>
                        <td>@p.DESCRIPTION</td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="text-right">
        <div class="btn-group" id="divPagerContrl">
            <!--[PAGER]-->
        </div>
    </div>
</div>
<script type="text/javascript">
    CreatePagerSubmit(@ViewBag.CurrentPage, @ViewBag.TotalPages, $("#divPagerContrl"));
</script>
