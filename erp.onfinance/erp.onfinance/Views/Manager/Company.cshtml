                                <tr ng-repeat="item in ListNumber" class="text-center" style="cursor:pointer">
                                    <td class="text-center">
                                        <label style="display: inline; color: red; cursor:pointer">{{$index + 1}}</label>
                                    </td>
                                    <td>
                                        <label>{{item.INITTIME | dateTimeFormat}}</label>
