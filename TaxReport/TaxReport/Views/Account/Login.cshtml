@{
    ViewBag.Title = "Đăng nhập - Hệ thống tra cứu sử dụng hóa đơn điện tử trên kênh OnFinance.asia";
}

<style>
    .error {
        display: none;
        color: red;
        font-size: 14px;
    }
</style>
<div id="popop-login">
    <p class="logo text-center" style="height: auto;"><img src="~/Images/logo_full.jpg" style="height: 80px;" /></p>
    <div class="message-login-form text-center">
        Đăng nhập hệ thống tra cứu dành cho cơ quan thuế
    </div>


    <form class="validate-form" method="post">
        <div>
            <span class="error">*<span id="errorMessgage"></span></span>
        </div>
        <div class="wrap-input100 validate-input">
            <input type="text" name="username" id="username" class="form-control input100 input-text" />
            <span class="focus-input100">Tên đăng nhập</span>
        </div>
        <div class="wrap-input100 validate-input" data-validate="Enter password">
            <span class="btn-show-pass">
                <i class="zmdi zmdi-eye"></i>
            </span>
            <input class="form-control input100 input-text" type="password" name="password" id="password" />
            <span class="focus-input100">Mật khẩu</span>
        </div>
        <button class="btn btn-success btn-block mt-3 btn-register" id="btn-login" type="button">
            Đăng nhập
        </button>
    </form>

    <p class="link-active text-center">
        Copyright © 2019 <a href="https://onfinance.asia">OnFinance.asia</a>  |  Designed by NOVAON
    </p>
    <p class="clear"></p>
</div>

