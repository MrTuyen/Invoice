@using DS.Common
@using System.Data;
@{
    ViewBag.Title = "Khách hàng";
    ViewBag.Description = "Danh sách";
}
<div class="scrollable-content" ng-controller="CustomerController">
    <div class="box box-default">
        <div class="box-header with-border">
            <h4 class="panel-title">
                Tìm kiếm khách hàng
            </h4>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <div class="box-body">
            <div class="row">
                <div class="col-lg-2 text-right" style="padding-top: 6px;">
                    <label>Khách hàng</label>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Mã, số đt, tên khách hàng" ng-model="customerKeywords" />
                    </div>
                </div>
                <div class="col-lg-2 text-right" style="padding-top: 6px;">
                    <label>Điểm</label>
                </div>
                <div class="col-lg-2">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="0" ng-model="fromPointKeywords" />
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="999999" ng-model="toPointKeywords" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-2 text-right" style="padding-top: 6px;">
                    <label>Loại khách hàng</label>
                </div>
                <div class="col-lg-2">
                    <select class="form-control" id="ddlCustomerType" multiple="multiple" style="width:90%;" ng-model="modelCustomerType">
                        <option ng-repeat="o in listtype" value="{{o.VALUE}}">{{o.NAME}}</option>
                    </select>
                </div>
                <div class="col-lg-2 text-right" style="padding-top: 6px;">
                    <label>Ngày mở thẻ</label>
                </div>
                <div class="col-lg-2">
                    <input type="text" class="datepicker form-control" autocomplete="off" ng-model="startDate" placeholder="Từ ngày" />
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <input type="text" class="datepicker form-control" autocomplete="off" ng-model="endDate" placeholder="Đến ngày" />
                    </div>
                </div>
            </div>
            
            <div class="box-footer">
                <div class="from-group">
                    <button type="button" class="btn btn-warning" id="btnSeach" ng-click="SearchCustomer(1)"><span class="fa fa-search"></span> Tìm kiếm</button>
                    <button type="button" class="btn btn-info" ng-click="ExportExcel()"><span class="fa fa-file-excel-o"></span> Xuất Excel</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/Content/js/jquery.fileDownload.js" type="text/javascript"></script>
