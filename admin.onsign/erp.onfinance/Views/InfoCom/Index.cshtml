@using DS.Common
@using System.Data;
@{
    ViewBag.Title = "Hồ Sơ Doanh Nghiệp";
    ViewBag.Description = "hosodoanhnghiep.vn";
}
<div class="scrollable-content" ng-controller="InfoComController" ng-init="Init(1)">
    <div class="box box-default">
        <div class="box-header with-border">
            <h4 class="panel-title">
                Tìm kiếm khách hàng
            </h4>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <div class="box-body">
        </div>
        <div class="box-body" style="padding: 10px 40px;">
            <div class="row" style="margin-top:6px">
                <table class="table table-bordered table-sm table-vertical-center table-head-green table-hover">
                    <thead>
                        <tr>
                            <th class="text-center">STT</th>
                            <th class="text-right">MST</th>
                            <th class="">Tên doanh nghiệp</th>
                            <th class="">Địa chỉ</th>
                            <th class="text-right">Số điện thoại</th>
                            <th class="">Pháp nhân</th>
                            <th class="text-center">Ghi chú</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr ng-repeat="item in ListCompany">
                            <td class="text-center" style="cursor:pointer">{{$index + 1}}</td>
                            <td class="text-left text-primary">{{item.COMTAXCODE}}</td>
                            <td class="text-right" width="20%">{{item.COMNAME}}</td>
                            <td class="text-left" width="25%">{{item.COMADDRESS}}</td>
                            <td class="text-right">{{item.COMPHONE}}</td>
                            <td class="text-left">{{item.COMLEGAL}}</td>
                            <td class="text-left"><textarea style="width: 100%" rows="2"></textarea></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="/Content/js/jquery.fileDownload.js" type="text/javascript"></script>
